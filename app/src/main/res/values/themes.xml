<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Splash application theme. -->
    <style name="Theme.MySplash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/bg_splash</item>
        <item name="postSplashScreenTheme">@style/Theme.BMI</item>
    </style>

    <!-- Base application theme. -->
    <style name="Theme.BMI" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main</item>
        <item name="colorPrimaryVariant">@color/second</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/main_0_7</item>
        <item name="colorSecondaryVariant">@color/second_0_7</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black_0_2</item>
        <!-- Customize your theme here. -->
    </style>
</resources>