<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_main_screen"
    android:orientation="horizontal"
    android:paddingTop="@dimen/padding_extra_large"
    android:paddingBottom="@dimen/padding_default">

    <ImageView
        android:id="@+id/iv_back_arrow"
        android:layout_width="@dimen/btn_back_height"
        android:layout_height="@dimen/btn_back_height"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/margin_default"
        android:contentDescription="@string/content_description_back"
        app:srcCompat="@drawable/ic_back" />

    <TextView
        android:id="@+id/tv_title"
        style="@style/text_20_white_raleway_400"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/margin_default"
        android:layout_marginEnd="@dimen/margin_extra_large"
        android:gravity="center"
        tools:text="Title" />

</LinearLayout>